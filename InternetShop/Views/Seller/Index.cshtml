@using InternetShop.Models
@model IEnumerable<Product>

@{
    ViewData["Title"] = "Seller Page";
}
<div class="product-big-title-area">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="product-bit-title text-center">
                    <h2>@ViewBag.SellerName</h2>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="seller-area">
    <div class="single-product-area">
        <div class="zigzag-bottom"></div>
        <table align="center">
            <tr>
                <td align="center" >
                    <div class="container">
                        <div class="row">
                            @foreach(Product product in Model)
                            {
                                <div class="col-md-3 col-sm-6">
                                    <div class="single-shop-product">
                                        <div class="product-upper">
                                            <img src="@product.ImagePath" alt="">
                                        </div>
                                        <h2><a href="">@product.Shortname</a></h2>
                                        <div class="product-carousel-price">
                                            <ins>@product.Products.FirstOrDefault(x=> product.Products.Max(z=> z.LastEdit) == x.LastEdit)</ins>
                                        </div>  
                                
                                        <div class="product-option-shop">
                                            <a class="add_to_cart_button" data-quantity="1" data-product_sku="" data-product_id="70" rel="nofollow" href="/canvas/shop/?add-to-cart=70">Add to cart</a>
                                        </div>                       
                                    </div>
                                </div>
                            } 
                        </div>
                    </div>
                </td>
                <td align="center">
                    <div class="product-option-shop">
                                    <a class="add_to_cart_button" data-quantity="1" data-product_sku="" data-product_id="70" rel="nofollow" href="/seller/newproduct">Add new </a>
                                </div>
                </td>
            </tr>
        </table>
    </div>
</div>

        